{% extends 'base.html.twig' %}

{% block body %}
<h1>Inscription sur le site</h1>
{{ form_start(form)}}


{{form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur'}})}}
{{form_row(form.email, {'attr': {'placeholder': 'Email'}})}}
{{form_row(form.password, {'attr': {'placeholder': 'Mot de passe'}})}}
{{form_row(form.confirm_password, {'attr': {'placeholder': 'Confirmer le mot de passe'}})}}

<button type="submit" class="btn btn-succes">Inscription</button>
{{form_end(form)}}
{% endblock %}