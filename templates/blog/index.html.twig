{% extends 'base.html.twig' %}

{% block title %}Blog Notion{% endblock %}

{% block body %}
    <br>
<section class="articles">

    {% for article in articles %}
    <div class="">
    <div class="max-w-2xl mx-auto overflow-hidden bg-white rounded-lg shadow-md dark:bg-gray-800">
                <img class="object-cover w-full h-64" src="https://images.unsplash.com/photo-1550439062-609e1531270e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" alt="Article">

                <div class="p-6">
                    <div>
                        <a href="#" class="block mt-2 text-2xl font-semibold text-gray-800 dark:text-white hover:text-gray-600 hover:underline">{{ article.title }}</a>
                        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">{{ article.content | raw }}</p>
                    </div>

                    <div class="mt-4">
                        <div class="flex items-center">
                            <div class="flex items-center">
                            </div>
                            <span class="mx-1 text-xs text-gray-600 dark:text-gray-300">Ecrit le {{ article.createdAt | date('d/m/Y') }}</span>

                        </div>
                        <br>
                        <a href="{{ path('blog_show', {'id': article.id})}}" class="px-4 py-2 font-medium tracking-wide text-white capitalize transition-colors duration-200 transform bg-blue-600 rounded-md dark:bg-gray-800 hover:bg-blue-500 dark:hover:bg-gray-700 focus:outline-none focus:bg-blue-500 dark:focus:bg-gray-700">
                            Lire la suite
                        </a>
                    </div>
                </div>
            </div>

    <br>
    {% endfor %}

    </div>
</section>
    <br>
    {% include('footer.html.twig') %}

{% endblock %}
